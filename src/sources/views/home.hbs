<div class='mt-4 ml-4'>
    <div class='row'>
        {{#each courses}}
            <div class='col-sm-6 col-lg-4'>
                <div class='card' style='width: 18rem;'>
                    <img src='{{this.img}}' class='card-img-top' alt='{{this.name}}' />
                    <div class='card-body'>
                        <h5 class='card-name'>{{this.name}}</h5>
                        <p class='card-text'>{{this.description}}</p>
                        <a href='courses/{{this.slug}}' class='btn btn-primary'>Click!</a>
                    </div>
                </div>
            </div>

        {{/each}}
    </div>
</div>